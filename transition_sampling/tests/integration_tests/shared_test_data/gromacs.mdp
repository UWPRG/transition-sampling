; RUN CONTROL PARAMETERS
integrator               = md
; Start time and timestep in ps
tinit                    = 0
dt                       = 0.001
nsteps                   = 1000

; Print frequency and velocity generation for testing
; nstxout = 100
; gen-vel = yes


; Periodic boundary conditions: xyz (default), no (vacuum)
; or full (infinite systems only)
pbc                      = xyz
comm-mode = None


; freeze the edge chloride ions
freezegrps = CL
freezedim = Y Y Y